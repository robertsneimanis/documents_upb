%p.notice= notice
%p.alert= alert
%h1 Sign in
= form_with(url: sign_in_path) do |form|
  %div
    = form.label :email, class: 'd-block'
    = form.email_field :email,
                       value: params[:email_hint],
                       required: true, autofocus: true,
                       autocomplete: 'email'
  %div
    = form.label :password, class: 'd-block'
    = form.password_field :password,
                          required: true,
                          autocomplete: 'current-password'

  = form.submit 'Sign in', class: 'btn btn-info'

= link_to 'Sign up', sign_up_path, class: 'btn btn-primary'
= link_to new_identity_password_reset_path, class: 'btn btn-primary' do
  Forgot your password?
